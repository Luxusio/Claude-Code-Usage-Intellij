<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.luxusio.claudecodeusageintellij</id>
    <name>Claude Code Usage</name>
    <vendor email="luxusio@github.com" url="https://github.com/Luxusio">Luxusio</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.ClaudeBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Application Service for Settings Storage -->
        <applicationService
            serviceImplementation="com.github.luxusio.claudecodeusageintellij.settings.ClaudeUsageSettings"
        />

        <!-- Settings Configurable -->
        <applicationConfigurable
            parentId="tools"
            instance="com.github.luxusio.claudecodeusageintellij.settings.ClaudeUsageConfigurable"
            id="com.github.luxusio.claudecodeusageintellij.settings.ClaudeUsageConfigurable"
            displayName="Claude Code Usage"
        />

        <!-- Tool Window for detailed usage view -->
        <toolWindow
            id="Claude Usage"
            anchor="right"
            factoryClass="com.github.luxusio.claudecodeusageintellij.toolWindow.ClaudeUsageToolWindowFactory"
            icon="AllIcons.Actions.GroupByPrefix"
        />

        <!-- Status Bar Widget for quick usage view -->
        <statusBarWidgetFactory
            id="ClaudeUsageStatusBarWidget"
            implementation="com.github.luxusio.claudecodeusageintellij.statusBar.ClaudeUsageStatusBarWidgetFactory"
            order="after positionWidget"
        />
    </extensions>
</idea-plugin>
